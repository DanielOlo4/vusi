const grid = document.getElementById('underground');
let position = 0;
const itemWidth = 900; // width of one image in px

function scrollNext() {
  position += itemWidth;
  grid.style.transform = `translateX(-${position}px)`;

  setTimeout(() => {
    grid.appendChild(grid.children[0]); // move first item to end
    position -= itemWidth;

    grid.style.transition = 'none'; // disable transition for snap-back
    grid.style.transform = `translateX(-${position}px)`;

    // Force reflow to re-enable transition
    void grid.offsetWidth;
    grid.style.transition = 'transform 0.5s ease';
  }, 500); // match transition time
}

setInterval(scrollNext, 2000); // scroll every 2 seconds